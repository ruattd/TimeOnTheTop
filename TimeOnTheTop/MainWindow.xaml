<Window x:Class="TimeOnTheTop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TimeOnTheTop"
        mc:Ignorable="d"
        ShowInTaskbar="False" WindowStyle="None" Topmost="True"
        Background="Transparent" AllowsTransparency="True"
        Title="Time on the Top" Height="200" Width="200" Left="0" Top="0">
    <StackPanel>
        <TextBlock x:Name="TimeText" IsHitTestVisible="False" Text="Loading..."/>
    </StackPanel>
</Window>
